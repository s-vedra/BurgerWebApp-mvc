@model List<BurgerViewModel>


<h5 class="card-header">Featured</h5>
<div class="form-search">
       <form asp-action="Search" asp-controller="Burger">
            <div class="form-group search-option">
                <input type="text" name="id" class="form-control w-100" placeholder="Search"/>
                <button type="submit" value="Search" class="btn btn-dark btn-search" >Search</button>
            </div>
       </form>
   </div>
<div class="index-page">

<h1 class="mt-3">Menu:</h1>

 <div class="cards">
      
 @foreach(BurgerViewModel burger in Model)
 {
      <partial name="_PartialViewBurgerDetails" model="@burger"></partial>
 }
 </div>

 

 </div>
 <a asp-controller="Burger" asp-action="AddOrEditBurgerMenu" class="btn btn-outline-dark mt-4">Add New Burgers</a>