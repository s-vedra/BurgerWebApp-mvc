@model List<OrderViewModel>
<div class="form-search">
       <form asp-action="Search" asp-controller="Order">
            <div class="form-group search-option">
                <input type="text" name="id" class="form-control w-100" placeholder="Search"/>
                <button type="submit" value="Search" class="btn btn-dark btn-search" >Search</button>
            </div>
       </form>
   </div>
@foreach (var order in Model)
{
    <input type="hidden" asp-for="@order.CartId"/>
}

<table class="table table-hover">
       <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Full Name</th>
      <th scope="col">Address</th>
      <th scope="col">Order Details</th>
 @*     <th scope="col">Delivery Status:</th>*@
    </tr>
  </thead>
@foreach (var item in Model)
{
  <tbody>
    <tr>
      <td>@item.Id</td>
      <td>@item.Name @item.LastName</td>
      <td>@item.Address</td>
      <td><a asp-action="Details" asp-controller="Order" asp-route-id="@item.Id" class="btn btn-outline-dark">Order Details</a></td>
               
               @* @{
                    if (item.IsDelivered)
                    {
                        <td>Delivered</td>
                    }
                    else
                    {
                        <td>Not Delivered</td>
                    }
                }*@
    
       <td><a asp-action="DeleteOrder" asp-controller="Order" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a></td> 
    </tr>
  </tbody>
}
</table>