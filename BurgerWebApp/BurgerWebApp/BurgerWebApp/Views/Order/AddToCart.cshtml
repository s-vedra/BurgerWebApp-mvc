@model OrderViewModel
@{
    CartViewModel cart = ViewBag.Cart;

}
<form asp-action="SaveOrder" asp-controller="Order" method="post">
    <input type="hidden" asp-for="CartId" value="@cart.Id"/>
     <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
     </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address " class="form-control" />
    </div>
    <br />
    <select asp-for="@Model.Location" asp-items="@(IEnumerable<SelectListItem>) ViewBag.Locations" class="btn btn-dark dropdown-toggle text-white">
        <option>--Select--</option>
    </select>
     <button type="submit" class="btn btn-primary">Save</button>
</form>