@model List<LocationViewModel>

<div class="location-page">
<a asp-action="EditOrAddLocation" asp-controller="Location" class="btn btn-primary">Add a new Location</a>
 <div class="cards">
@foreach(var item in Model){
    <div class="card mb-6">
  <img src="@item.Image" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">@item.Name</h5>
    <p class="card-text"><small class="text-muted">Address: @item.Address</small></p>
    <p class="card-text"><small class="text-muted">Working Hours: @item.OpensAt.ToString("HH:mm") - @item.ClosesAt.ToString("HH:mm")</small></p>
    <div class="buttons">
    <a asp-action="EditOrAddLocation" asp-controller="Location" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit Location</a>
    <a asp-action="DeleteLocation" asp-controller="Location" asp-route-id="@item.Id" class="btn btn-danger">Delete Location</a>
    </div>
  </div>
</div>
}
</div>
</div>