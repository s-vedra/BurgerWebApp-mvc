@model List<LocationViewModel>

   <div class="form-search">
       <form asp-action="Search" asp-controller="Location">
            <div class="form-group search-option">
                <input type="text" name="id" class="form-control w-100" placeholder="Search"/>
                <button type="submit" value="Search" class="btn btn-dark btn-search" >Search</button>
            </div>
       </form>
   </div>
   <h1>Locations:</h1>
<div class="location-page">

 <div class="cards">
@foreach(var item in Model){
    <div class="card mb-6 shadow-lg bg-white rounded mt-5">
  <img src="@item.Image" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">@item.Name</h5>
    <p class="card-text"><small class="text-muted">Address: @item.Address</small></p>
    <p class="card-text"><small class="text-muted">Working Hours: @item.OpensAt.ToString("HH:mm") - @item.ClosesAt.ToString("HH:mm")</small></p>
    <div class="buttons">
    <a asp-action="EditOrAddLocation" asp-controller="Location" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
    <a asp-action="DeleteLocation" asp-controller="Location" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
    </div>
  </div>
</div>
}
</div>
</div>
<a asp-action="EditOrAddLocation" asp-controller="Location" class="btn btn-outline-dark">Add a new Location</a>